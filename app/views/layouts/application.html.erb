<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <% if user_signed_in? %>
      <div class="search-form d-flex align-items-center justify-content-center mt-1">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([["User"],["Book"]]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect"],["前方一致","forward"],["後方一致","backword"],["部分一致","partial"]]) %>
          <%= f.submit "検索", class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
    <% end %>
    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
