<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <p class="text-danger">♥<%= @book.favorites.count %></p>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
          <td>コメント数：<%= @book.book_comments.count %></td>
        </tr>
      </table>
      <table>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:'100x100' %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@book,@book_comment], method: :post do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows:'5', class: "w-100 form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信", class: "btn btn-md float-right btn-outline-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>